        <div class="btn-group" role="group" aria-label="Basic outlined example" style="margin: 0px;">
          {{#if user}}
          <a href="/profile/{{user.username}}" class="btn btn-outline-warning" id="userNameBadge">{{user.username}} </a>
          <a href="/users/logout" class="btn btn-outline-warning">Logout</a>

          {{else}}
          <a href="/users/login" class="btn btn-outline-warning">Log in</a>
          <a href="/users/signup" class="btn btn-outline-warning">Sign up</a>
